<?xml version="1.0" encoding="UTF-8"?>

<?import cpusim.gui.util.DefaultControlButtonController?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<fx:root alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" spacing="5.0" type="VBox" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="3.0" left="3.0" right="5.0" top="3.0" />
    </padding>
    <children>
      <HBox fx:id="titleHBox">
         <children>
              <Label fx:id="title" text="Fields" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" />
            <Region maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="5.0" prefWidth="10.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="showEditFieldsButton" accessibleRole="MENU_BUTTON" alignment="CENTER_RIGHT" contentDisplay="GRAPHIC_ONLY" minHeight="16.0" mnemonicParsing="false" prefHeight="20.0" HBox.hgrow="NEVER">
                <graphic>
                    <FontIcon iconLiteral="fa-ellipsis-h" styleClass="icon-only" />
                </graphic>
            </Button>
         </children>
      </HBox>
      <TableView fx:id="fieldTableView" maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="nameColumn" editable="false" maxWidth="1.7976931348623157E308" minWidth="50.0" prefWidth="100.0" text="Name" />
          <TableColumn fx:id="widthColumn" editable="false" maxWidth="100.0" minWidth="50.0" prefWidth="50.0" resizable="false" text="Width" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
        <DefaultControlButtonController fx:id="controlButtons" prefIconOnly="true" VBox.vgrow="NEVER" />
    </children>

    <stylesheets>
        <URL value="@../css/Dialogs.css" />
    </stylesheets>
</fx:root>
