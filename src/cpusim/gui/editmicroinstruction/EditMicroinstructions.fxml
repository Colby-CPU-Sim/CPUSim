<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import java.net.URL?>

<BorderPane fx:id="scene" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="300.0" prefWidth="800.0" styleClass=".root"
            xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8">
    <bottom>
        <VBox id="VBox" fx:id="vBox" alignment="CENTER" spacing="5.0">
            <HBox id="HBox" alignment="CENTER" prefHeight="26.0" prefWidth="600.0"
                  spacing="15.0">
                <Button fx:id="newButton" disable="true" minHeight="-Infinity"
                        mnemonicParsing="false" onAction="#onNewButtonClick"
                        prefHeight="22.0" styleClass="roundButton"
                        text="     New     "/>
                <Button fx:id="deleteButton" disable="true" minHeight="-Infinity"
                        mnemonicParsing="false" onAction="#onDeleteButtonClick"
                        prefHeight="22.0" styleClass="roundButton"
                        text="    Delete    "/>
                <Button fx:id="duplicateButton" disable="true"
                        minHeight="-Infinity" mnemonicParsing="false"
                        onAction="#onDuplicateButtonClick" prefHeight="22.0"
                        styleClass="roundButton" text="   Duplicate   "/>
            </HBox>
            <HBox id="HBox" alignment="CENTER" prefHeight="40.0" spacing="5.0">
                <Pane prefHeight="40.0" prefWidth="107.0"/>
                <Button fx:id="helpButton" contentDisplay="CENTER"
                        minHeight="-Infinity" minWidth="-Infinity"
                        mnemonicParsing="false" onAction="#onHelpButtonClick"
                        prefHeight="25.0" prefWidth="25.0" styleClass="helpButton"
                        text="?" textAlignment="CENTER"/>
                <Pane prefHeight="40.0" prefWidth="315.0"/>
                <Button fx:id="okButton" defaultButton="true"
                        minHeight="-Infinity" minWidth="100.0"
                        mnemonicParsing="false" onAction="#onOKButtonClick"
                        prefHeight="22.0" prefWidth="160.0"
                        styleClass="roundBlueButton" text="OK"/>
                <Button fx:id="cancelButton" cancelButton="true"
                        minHeight="-Infinity" minWidth="100.0"
                        mnemonicParsing="false" onAction="#onCancelButtonClick"
                        prefHeight="22.0" prefWidth="160.0"
                        styleClass="roundButton" text="Cancel"/>
            </HBox>
        </VBox>
    </bottom>
    <center>
        <Pane fx:id="tables"/>
    </center>
    <stylesheets>
        <URL value="@../css/Dialogs.css"/>
    </stylesheets>
    <top>
        <HBox id="HBox" fx:id="hBox" alignment="CENTER" spacing="5.0">
            <Label prefHeight="50.0" text="Type of Microinstruction:"/>
            <ComboBox fx:id="microinstructionCombo" value="TransferRtoR">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="TransferRtoR"/>
                        <String fx:value="TransferRtoA"/>
                        <String fx:value="TransferAtoR"/>
                        <String fx:value="Arithmetic"/>
                        <String fx:value="Branch"/>
                        <String fx:value="Test"/>
                        <String fx:value="MemoryAccess"/>
                        <String fx:value="Set"/>
                        <String fx:value="Increment"/>
                        <String fx:value="Shift"/>
                        <String fx:value="Logical"/>
                        <String fx:value="IO"/>
                        <String fx:value="Decode"/>
                        <String fx:value="SetCondBit"/>
                    </FXCollections>
                </items>
            </ComboBox>
        </HBox>
    </top>
</BorderPane>
